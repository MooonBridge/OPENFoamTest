{
    left
    {
        type            fixedValue;
        value           uniform 0;
    }

    right
    {
        type            fixedValue;
        value           uniform 0;
    }

    top
    {
        type            fixedValue;
        value           uniform 100;
    }

    bottom
    {
        type            fixedValue;
        value           uniform 0;
    }
	
	front
    {
        type            empty;
    }
	
	back
    {
        type            empty;
    }

    // other boundaries ...
}

